<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEF4"
    tools:context=".view.activity.Home.HomeActivity">

    <org.giwi.networkgraph.lib.graph.ZoomView
        android:id="@+id/mysurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:edgeColor="@android:color/holo_blue_light"
        app:nodeBgColor="@android:color/holo_red_light"
        app:nodeColor="@android:color/holo_blue_light" />

</RelativeLayout>
